# =========================================
# ASP.NET Core Configuration
# =========================================
# Specifies the hosting environment (e.g., Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_HTTP_PORTS=8080
ASPNETCORE_HTTPS_PORTS=8081

# =========================================
# Connection strings Configuration
# =========================================
ConnectionStrings__Database=YOUR_DATABASE_CONNECTION_STRING_HERE
ConnectionStrings__Cache=YOUR_CACHE_CONNECTION_STRING_HERE

# =========================================
# JWT / Token Authentication
# =========================================
JwtConfig__Issuer=YOUR_JWT_ISSUER_HERE
JwtConfig__Audience=YOUR_JWT_AUDIENCE_HERE
JwtConfig__Key=YOUR_SUPER_SECRET_JWT_KEY_HERE_MIN_32_CHARS
JwtConfig__ExpiresInMinutes=60
RefreshConfig__ExpiresInDays=30

# =========================================
# Google OAuth2 Configuration
# =========================================
GoogleConfig__ClientId=YOUR_GOOGLE_CLIENT_ID
GoogleConfig__ClientSecret=YOUR_GOOGLE_CLIENT_SECRET
GoogleConfig__UserInfoUrl=https://www.googleapis.com/oauth2/v3/userinfo

# =========================================
# Email Service Configuration
# =========================================
EmailConfig__Host=smtp.gmail.com
EmailConfig__Port=587
EmailConfig__Company=Netflex
EmailConfig__Username=YOUR_EMAIL
EmailConfig__Password=YOUR_PASSWORD